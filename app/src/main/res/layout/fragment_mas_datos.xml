<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MasDatosFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/mas_datos_btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mas_datos_btn_profile">

        <TextView
            android:id="@+id/txt_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mas_datos_superheroes1"
            android:textColor="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/txt_superheroes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mas_datos_superheroes2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_contactos"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="Ir a contactos" />

        <Button
            android:id="@+id/btn_gym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ir a Gym" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>